<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="25dp"


    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >


        <ImageView
            android:id="@+id/announcement_object_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/nickTV"
            android:layout_width="200dp"
            android:background="@color/black"
            android:alpha="0.6"
            android:paddingLeft="5dp"

            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/personImage"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:background="@color/black"
            android:alpha="0.6"
            android:paddingLeft="5dp"

            android:id="@+id/pointsTV"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="TextView"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/personImage"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="24dp"

            android:background="@color/black"
            android:alpha="0.6"
            android:paddingLeft="5dp"

            android:layout_marginStart="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="15dp"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/personImage"
            app:layout_constraintTop_toBottomOf="@+id/pointsTV" />

        <TextView
            android:background="@color/black"
            android:alpha="0.6"
            android:paddingLeft="5dp"

            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Type of help"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/personImage"
            app:layout_constraintTop_toTopOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personImage"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:layout_gravity="center_vertical"


            android:layout_marginStart="16dp"
            android:contentDescription="@string/avatar"
            android:src="@drawable/user_default_logo"
            android:textColor="@color/quantum_white_100"

            app:civ_border_color="@color/white"
            app:civ_border_width="0.1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.394"
            app:srcCompat="@drawable/user_default_logo" />


        <TextView
            android:id="@+id/timeTV"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:background="@color/black"
            android:alpha="0.6"
            android:paddingLeft="5dp"


            android:layout_marginStart="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/personImage"
            app:layout_constraintTop_toBottomOf="@+id/nickTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>