<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC99"
    >

    <CheckBox
        android:id="@+id/pointCheckBox"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#2548AF"

        android:text="Do you want to give volunteer a point?" />



    <CheckBox
        android:id="@+id/opinCheckBox"
        android:layout_below="@+id/pointCheckBox"
        android:layout_marginTop="20dp"
        android:textColor="#2548AF"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to write opinion about volunteer?" />



    <EditText
        android:id="@+id/opinionET"
        android:layout_centerHorizontal="true"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opinCheckBox"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="#2548AF"
        android:background="@null"
        android:visibility="invisible"

        android:inputType="textMultiLine"
        android:gravity="start"
        android:hint="Write your opinion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="139dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:background="#FFCC99">

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textColor="@color/white"
            android:background="@drawable/buttonstyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>